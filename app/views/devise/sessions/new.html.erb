<div class="log-in">
  <div class="box-1 rounded">
    <h2 class="text-center font-family">ログイン</h2>
    <%= form_with model: @user, url: user_session_path, local: true do |f| %>
      <div class="actions text-center mb-3">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'メールアドレス' %>
      </div>

      <div class="actions text-center mb-3">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: 'パスワード 6文字以上' %>
      </div>

      <div class="actions text-center mt-3 mb-3">
        <%= f.submit "ログイン", class: 'btn btn-outline-info shadow-sm rounded-pill session-login loginsize' %>
      </div>

      <div class="actions text-center"><%= link_to 'ゲストログイン（閲覧用）', homes_guest_sign_in_path, class: 'btn btn-outline-dark shadow-sm rounded-pill loginsize', method: :post %></div>

    <% end %>
  </div>
  <div class="mt-5 thisis"><%= render "devise/shared/links" %></div>

</div>