<div class="log-in">
  <div class="box-1 rounded">
    <h2 class="text-center">ログイン</h2>
    <%= form_with model: @user, url: user_session_path, local: true do |f| %>
      <div class="field">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'メールアドレス' %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード　　" %>
        <%= f.password_field :password, autocomplete: "current-password", placeholder: 'パスワード（6文字以上）' %>
      </div>

      <div class="actions text-center mt-3">
        <%= f.submit "ログイン" %>
      </div>
    <% end %>
  </div>
  <div class="mt-5"><%= render "devise/shared/links" %></div>

</div>