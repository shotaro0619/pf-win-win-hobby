<h1>投稿する</h1>

<%= form_with model: @hobby, local:true do |f| %>
  <h4>趣味名</h4>
  <%= f.text_field :name %>
  <h4>ジャンル</h4>
  <!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalLong">
  選ぶ
</button>
    <%= f.label :ジャンル %>
    <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択して下さい--" %>
<!-- Modal -->
<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">


        <%#= form_with model: @hobby, local:true do |f| %>
          <%#= f.collection_check_boxes :genre_id, Genre.all, :id, :name %>
        <%# end %>

        <%#= f.label :genre, "ジャンル：" %>
        <%#= f.radio_button :genre, "楽器" %>
        <%#= f.radio_button :genre, "音楽ライブ" %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
  <h4>コメント</h4>
  <%= f.text_area :comment %>
  <%= f.submit '投稿' %>
<% end %>