<div class="container">
  <div class="col-xs-offset-1 col-xs-10 hobby-index">
    <% hobbies.each do |hobby| %>
          <div class="row">
            <div class="col-2 text-center pt-3 customer-info">
              <p>
                <%= link_to user_path(hobby.user) do %>
                  <%= attachment_image_tag hobby.user, :profile_image, :fill, 110, 110, fallback: "unnamed.png", size:'110', class: "prof_image" %>
                <% end %><br>
                <span class="prof_name"><%= hobby.user.nickname%></span>
              </p>
            </div>
            <div class="col-3 pt-3 user-info">
              <% if hobby.user.category == "先生"%>
              　<p class="category-teacher text-white pt-1 rounded-pill shadow user-info"><%= hobby.user.category %></p>
              <% else %>
                <p class="category-student text-white pt-1 rounded-pill shadow user-info"><%= hobby.user.category %></p>
              <% end %>
              <p class="example"><span class="text-white px-2 py-1 mr-3 rounded-pill shadow bg-info user-info">趣味名</span>　<%= hobby.name %></p>
              <p class="example"><span class="text-white px-2 py-1 mr-3 rounded-pill shadow bg-warning user-info">ジャンル</span><%= hobby.genre.name if hobby.genre %></p>
            </div>
            <div class="col-md-6 pt-3">
              <p class="comment rounded comment-box"><%=safe_join(hobby.comment.split("\n"),tag(:br))%></p>
            </div>
          </div>
        <hr>
    <% end %>
  </div>
</div>