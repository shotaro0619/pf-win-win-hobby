<p>投稿ユーザー画像：<%= attachment_image_tag @hobby.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></p>
<h1>投稿編集</h1>
<%= form_with model: @hobby, local:true do |f| %>
  <h4>趣味名</h4>
  <%= f.text_field :name %>
  <h4>ジャンル</h4>
  <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択して下さい--" %>
  <h4>コメント</h4>
  <%= f.text_area :comment %>
  <%= f.submit '投稿' %>
<% end %>