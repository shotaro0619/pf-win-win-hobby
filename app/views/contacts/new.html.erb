<div class="container">
  <div class="contact-area mb-5">
    <%= form_with model: @contact, url: confirm_path, local:true do |f| %>
     <div class="page-header">
     <%= render 'layouts/error_messages', model: f.object %>
        <h1>お問い合わせ</h1>
      </div>
      <div class="form-group">
        <%= f.label :name, 'お名前' %><span class="badge-danger rounded">必須</span>
        <%= f.text_field :name, autofocus: true, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :email, 'メールアドレス' %><span class="badge-danger rounded">必須</span>
        <%= f.text_field :email, autofocus: true, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :phone_number, '電話番号' %><span class="badge-danger rounded">必須</span>
        <%= f.text_field :phone_number, autofocus: true, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :message, 'メッセージ' %><span class="badge-danger rounded">必須</span>
        <%= f.text_area :message, size: '10x10', class: 'form-control' %>
      </div>

      <div>
        <%= f.submit '入力内容確認', class: 'btn btn-outline-info shadow-sm rounded-pill' %>
      </div>
    <% end %>
  </div>
</div>