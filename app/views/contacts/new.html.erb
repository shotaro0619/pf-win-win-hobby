<div class="m-5">
  <%= form_with model: @contact, url: confirm_path, local:true do |f| %>
   <div class="page-header">
   <%= render 'layouts/error_messages', model: f.object %>
      <h1>お問い合わせ</h1>
    </div>
    <div class="form-group">
      <%= f.label :name, 'お名前*' %>
      <%= f.text_field :name, autofocus: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :email, 'メールアドレス*' %>
      <%= f.text_field :email, autofocus: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :phone_number, '電話番号*' %>
      <%= f.text_field :phone_number, autofocus: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :message, 'メッセージ*' %>
      <%= f.text_area :message, size: '10x10', class: 'form-control' %>
    </div>

    <div>
      <%= f.submit '入力内容確認', class: 'btn btn-outline-info shadow-sm rounded-pill' %>
    </div>
  <% end %>
</div>