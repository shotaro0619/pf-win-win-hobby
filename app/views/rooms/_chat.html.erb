<div class="ml-5">
    <% if messages.present? %>
      <% messages.each do |m| %>
      <hr>
      <% if current_user.id == m.user.id %>
        <div class="text-right mr-5">
          <div class="talk2"><strong><%= m.content %></strong></div>
          <%= m.created_at.strftime('%Y/%m/%d') %>
          <%= attachment_image_tag m.user, :profile_image, fallback: "no_image.jpg", size:'70', class:"pro_photo" %>
          <small><strong><a href="/users/<%= m.user_id %>"><%= m.user.nickname %></a></strong></small>
        </div>
        <% else %>
         <%= attachment_image_tag m.user, :profile_image, fallback: "no_image.jpg", size:'70', class:"pro_photo" %><br>
          <small><strong><a href="/users/<%= m.user_id %>"><%= m.user.nickname %>さん</a></strong></small>
          <div class="talk"><strong><%= m.content %></strong></div>
          <%= m.created_at.strftime('%Y/%m/%d') %>
      <% end %>
      <% end %>
    <% else %>
      <h3 class="text-center">メッセージはまだありません</h3>
    <% end %>
</div>
<hr>
<div class="ml-3">
    <%= form_with model: message do |f| %>
      <%= f.text_field :content, :placeholder => "メッセージを入力して下さい" , :size => 70, class: "dm" %>
      <%= f.hidden_field :room_id, :value => room.id %>
      <br>
      <div class="m-3"><%= f.submit "投稿する" %></div>
    <% end %>
</div>