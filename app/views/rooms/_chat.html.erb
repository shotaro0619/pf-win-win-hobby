<% if messages.present? %>
  <% messages.each do |m| %>
  <% if current_user.id == m.user.id %>
    <div class="text-right mt-3">
      <%= m.created_at.strftime('%Y/%m/%d') %>
      <div class="right">
        <strong><%=simple_format(m.content)%></strong>
      </div>
      <%= link_to user_path(m.user) do %>
       <%= attachment_image_tag m.user, :profile_image, fallback: "unnamed.png", size:'70', class:"pro_photo" %>
      <% end %>
      <div class="name"><%= m.user.nickname %></div>
    </div>
  <% else %>
     <div class="d-flex flex-row mt-3">
       <div>
         <%= link_to user_path(m.user) do %>
           <%= attachment_image_tag m.user, :profile_image, fallback: "unnamed.png", size:'70', class:"pro_photo" %>
         <% end %>
         <div><%= m.user.nickname %>さん</div>
       </div>
       <div class="chat-content ml-2">
         <div class="left"><strong><%= m.content %></strong></div>
         <div class="timearea"><%= m.created_at.strftime('%Y/%m/%d') %></div>
       </div>
     </div>
  <% end %>
  <% end %>
<% else %>
  <h3 class="text-center">メッセージはまだありません</h3>
<% end %>
    
