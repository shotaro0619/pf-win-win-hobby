<% if @user.id == current_user.id %>
 <h1>マイページ</h1>
<% else %>
 <h1>user詳細</h1>
<% end %>

<% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
<% end %>

<% if @user.id != current_user.id %>
  <% if current_user.following?(@user) %>
    <%= link_to "Unfollow", user_relationships_path(@user.id), method: :delete %>
  <% else %>
    <%= link_to "Follow", user_relationships_path(@user.id), method: :post %>
  <% end %>
<% end %>

<div class="profile-container">
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  <h3 class="profile-name"><%= @user.nickname %></h3>
  <div><%= @user.introduction %></div>
  <%= link_to @user.followings.count, user_followings_path(@user) %>
  <%= link_to @user.followers.count, user_followers_path(@user) %>
</div>

<% @hobbies.each do |hobby| %>
  <div>
    <p>投稿ユーザー画像：<%= attachment_image_tag hobby.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></p>
    <p>ニックネーム：<%= hobby.user.name %></p>
    <p>趣味名：<%= hobby.name %></p>
    <p>ジャンル：<%#= hobby.genre.name %></p>
    <p>コメント <%= hobby.comment %></p>
    <% if @user == current_user %>
      <%= link_to "Edit", edit_hobby_path(hobby.id), class:"btn btn-sm btn-success" %>
    <% end %>
    <% if @user == current_user %>
      <%= link_to "Destroy", hobby_path(hobby), class:"btn btn-sm btn-danger", method: :delete %>
    <% end %>
  </div>
<% end %>