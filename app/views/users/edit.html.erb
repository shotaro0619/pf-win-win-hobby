<h2>プロフィール編集</h2>
<%= form_with model:@user, local:true do |f| %>
　<div class="form-group">
    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
    <label for="inputImage">Profile画像</label>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
  </div>

  <label for="inputName">ニックネーム</label>
  <%= f.text_field :nickname, autofocus: true, placeholder:"名前"%>

  <div class="form-group">
    <label for="inputIntroduction">Introduction</label>
    <%= f.text_area :introduction, autofocus: true, class:"form-control introduction"%>
  </div>
  <%= f.submit "変更を保存" %>
<% end %>